#include <iostream>
using namespace std;


int reverseByValue(int num) {
    int rev = 0;
    while (num > 0) {
        rev = rev * 10 + num % 10;
        num /= 10;
    }
    return rev;
}


void reverseByPointer(int *num) {
    int n = *num, rev = 0;
    while (n > 0) {
        rev = rev * 10 + n % 10;
        n /= 10;
    }
    *num = rev;
}


void reverseByReference(int &num) {
    int n = num, rev = 0;
    while (n > 0) {
        rev = rev * 10 + n % 10;
        n /= 10;
    }
    num = rev;
}

int main() {
    int num;
    cout << "Enter an integer: ";
    cin >> num;

    cout << "\nOriginal number: " << num << endl;

    cout << "Reverse (Call by Value) = " << reverseByValue(num) << endl;


    int numPtr = num;
    reverseByPointer(&numPtr);
    cout << "Reverse (Call by Pointer) = " << numPtr << endl;


    int numRef = num;
    reverseByReference(numRef);
    cout << "Reverse (Call by Reference) = " << numRef << endl;

    return 0;
}
